package spaceinvaders;

import java.awt.*;

/**
 *
 */
public class Missile implements Runnable {

    

    private int WIDTH;
    private int HEIGHT;

    private int xPosition = 0;
    private int yPosition = 0;

    private int missileSpeed; // pixels per tick
    boolean missileExists = true;

    AlienFleet fleet;

    /**
     *
     */
    public Missile(int x, int y, AlienFleet fleet) {
    	xPosition = x;//Set the shot direction
    	yPosition = y;
        this.fleet = fleet;
        Thread thread = new Thread(this);
        thread.start();
    }

    /**
     *
     */
    private boolean move() {

        //Now we need to see if we've hit anything!
        if (fleet.checkShot(xPosition, yPosition)) {
            //We hit something!
            System.out.println("We killed an alien ship");
            missileExists = false;
            return true;
        }

        yPosition -= missileSpeed;
        
        //check if it's gone of screen
        if (yPosition < 0) {
        	missileExists = false;
            return true;
        }

        return false;
    }

    /**
     * Draw the image of the shot
     */
    public void drawShot(Graphics g) {
        if (shotState) {
            g.setColor(Color.white);
        } else {
            g.setColor(Color.black);
        }
        g.fillRect(x, shotHeight, SHOT_WIDTH, SHOT_HEIGHT);
    }

    public boolean getShotState() {
        return shotState;
    }

    /**
     * The thread that moves the shot
     */
    public void run() {
        while(true) {
            try {
                Thread.sleep(shotSpeed);
            } catch(InterruptedException ie) {
                //Ignore this exception
            }

            //Use this line for super bullets
            //
            //moveShot()
            //
            //or this for normal bullets
            //
            //if (moveShot()) {
            // break;
            //}

            if (moveShot()) {
                break;
            }

        }
    }

}